<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="home.bthayes1.navigationbar.SignInFragment"
        android:label="Sign In"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_signInFragment_to_messageFragment"
            app:destination="@id/messages" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="home.bthayes1.navigationbar.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_messageFragment"
            app:destination="@id/messages" />
    </fragment>
    <fragment
        android:id="@+id/messages"
        android:name="home.bthayes1.navigationbar.MessageFragment"
        android:label="Messages"
        tools:layout="@layout/fragment_message">
        <action
            android:id="@+id/action_messageFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_messageFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:popUpTo="@id/navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/contacts"
        android:name="home.bthayes1.navigationbar.ContactsFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/profile"
        android:name="home.bthayes1.navigationbar.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>